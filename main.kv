ScreenManager:
    MainScreen:
        name: 'main'
    SecondScreen:
        name: 'second'
    StandardScreen:
        name: 'standard_screen'
    ProgramScreen:
        name: 'program_screen'
    SettingsScreen:
        name: 'settings_screen'

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [0,0,0,0]
        # Upper Panel (Header)
        BoxLayout:
            padding:[0,0,0,15]
            size_hint_y: None
            height: 60  # Height for the upper panel
            canvas.before:
                Color:
                    rgba: 0.498, 0.533, 0.553, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    points: [self.x, self.y, self.right, self.y]
                    width:6
            Label:
                id: time_label
                text: 'Time loading...'
                font_size: 35
                color: 1, 1, 1, 1  # White text for the time
                size_hint_y: None
                height: 35
                halign: 'center'  # Center the text horizontally
                valign: 'middle'  # Center the text vertically

        # Main content below the panel
        FloatLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.498, 0.533, 0.553, 1  # Same background color as the upper panel
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: 'WELCOME TO COMPOSITE OVEN SWARMLY'
                font_size: 25
                pos_hint: {'center_x':0.5, 'top':1.25}

            RoundedButton:
                text: 'Continue'
                font_size:30
                pos_hint: {'center_x':0.5, 'top':0.4}
                on_press: root.go_to_next()

<SecondScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Upper Panel (Header) with grey line
        BoxLayout:
            size_hint_y: None
            padding: [0, 0, 0, 10]
            height: 60  # Height for the upper panel
            canvas.before:
                Color:
                    rgba: 0.498, 0.533, 0.553, 1  # Background color for the upper panel
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    points: [self.x, self.y, self.right, self.y]  # Line at the bottom of the panel
                    width: 6

            Label:
                text: "CURRENT TEMP: "
                font_size: 35
                height:35
                size_hint_y: None
                size: self.texture_size
                halign: 'center'  # Center the text horizontally
                valign: 'middle'  # Center the text vertically

        # Main content below the panel
        FloatLayout:
            canvas.before:
                Color:
                    rgba: 0.498, 0.533, 0.553, 1  # Same background color as the upper panel
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "PLEASE SELECT: "
                font_size: 15
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'top': 0.99, 'center_x': 0.4}
            RoundedSmallButton:
                pos_hint: {'center_x': 0.5, 'top': 0.27}
                on_press: root.go_back()
            Image:
                source: "logos/turn-back.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.5, 'y': 0.115}

            RoundedButton:
                text: "  STANDARD"
                pos_hint: {'center_x': 0.5, 'top': 0.93}
                on_press: root.go_to_standard()
            Image:
                source: "logos/thermometer.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.365, 'top': 0.9}

            RoundedButton:
                text: "  PROGRAM"
                pos_hint: {'center_x': 0.5, 'top': 0.715}
                on_press: root.go_to_program()
            Image:
                source: "logos/chart.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.365, 'top': 0.685}

            RoundedButton:
                text: "  SETTINGS"
                pos_hint: {'center_x': 0.5, 'top': 0.5}
                on_press: root.go_to_settings()
            Image:
                source: "logos/setting.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.365, 'top': 0.47}

<RoundedButton>:
    font_size: 30
    size_hint: None, None
    size: 300, 80
    color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: 1,1,1,1  # Dark grey color (you can adjust the RGB values)
        RoundedRectangle:
            pos: self.x - 2, self.y - 2
            size: self.width + 4, self.height + 4
            radius: [30]  # Rounded corners for the button
        # Button background color (grey)
        Color:
            rgba: 0.3, 0.3, 0.3, 1  # Dark grey color (you can adjust the RGB values)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30]

<RoundedSmallButton>:
    font_size: 30
    size_hint: None, None
    size: 80, 80
    color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: 1,1,1,1  # Dark grey color (you can adjust the RGB values)
        RoundedRectangle:
            pos: self.x - 2, self.y - 2
            size: self.width + 4, self.height + 4
            radius: [30]  # Rounded corners for the button
        # Button background color (grey)
        Color:
            rgba: 0.3, 0.3, 0.3, 1  # Dark grey color (you can adjust the RGB values)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30]

