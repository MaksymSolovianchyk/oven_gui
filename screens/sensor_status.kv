<SensorStatusScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.498, 0.533, 0.553, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "logos/temperature-sensor.png"
            size_hint: None, None
            size: 64, 64
            pos_hint: {'center_x': 0.33, 'top': 0.65}

        Label:
            text: "Sensor #1: " + root.temp1 + "°C"
            pos_hint: {'center_x': 0.33, 'top': 0.85}
            font_size: 20
            size_hint: 0.2, 0.15

        ToggleButton:
            text: "Sensor 1: OFF" if self.state == "down" else "Sensor 1: ON"
            size_hint: 0.2, 0.1
            pos_hint: {'center_x': 0.33, 'top': 0.45}
            on_state: root.toggle_sensor1(self.state != 'down')

        Image:
            source: "logos/temperature-sensor.png"
            size_hint: None, None
            size: 64, 64
            pos_hint: {'center_x': 0.66, 'top': 0.65}

        Label:
            text: "Sensor #2: " + root.temp2 + "°C"
            pos_hint: {'center_x': 0.66, 'top': 0.85}
            font_size: 20
            size_hint: 0.2, 0.15

        ToggleButton:
            text: "Sensor 2: OFF" if self.state == "down" else "Sensor 2: ON"
            size_hint: 0.2, 0.1
            pos_hint: {'center_x': 0.66, 'top': 0.45}
            on_state: root.toggle_sensor2(self.state != 'down')

        Button:
            text: "Go Back"
            size_hint: 1, 0.15
            pos_hint: {"right": 1, 'top': 0.2}
            on_press: root.go_back()
