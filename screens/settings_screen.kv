<SettingsScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.498, 0.533, 0.553, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Top menu buttons
        RoundedSmallButton:
            pos_hint: {'center_x': 0.2, 'top': 0.95}
            on_press: root.go_back()
        Image:
            source: "logos/turn-back.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.2, 'top': 0.925}

            #Add button
        Label:
            text: "Add"
            font_size: 16
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.99, 'center_x': 0.8}
        RoundedSmallButton:
            pos_hint: {'center_x': 0.8, 'top': 0.95}
            on_press: root.file_detect_and_copy()
        Image:
            source: "logos/add.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.8, 'top': 0.92}

        Label:
            text:root.Instructions
            font_size:18
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size: self.texture_size
