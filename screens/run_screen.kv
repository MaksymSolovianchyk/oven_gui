<RunScreen>:
    FloatLayout:
        orientation: 'vertical'
        spacing:10
        canvas.before:
            Color:
                rgba: 0.498, 0.533, 0.553, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            padding:[0,0,0,0]
            size_hint_y: None  # Disables automatic vertical size
            height: 480  # Set the height manually here

            # This is where the canvas will be embedded
            Widget:
                id: canvas_widget
                size_hint: (None, None)

        Label:
            text: 'Time left:'
            pos_hint: {"right": 1, 'top': 0.75}
            font_size: 20
            size_hint: 0.2, 0.15

        Label:
            text: root.time_left_text
            pos_hint: {"right": 1, 'top': 0.7}
            font_size: 20
            size_hint: 0.2, 0.15

        Label:
            text:'Temp: ' + root.cur_temp + 'Â°C'
            pos_hint: {"right": 1, 'top': 0.9}
            font_size: 20
            size_hint: 0.2, 0.15
            color: root.cur_color

        RoundedSmallButton:
            pos_hint: {"right": 0.935, 'top': 0.49}
            size: 55,55
            on_press: root.show_yes_no_popup()

        Image:
            source: "logos/cross.png"
            size_hint: None, None
            size: 45,45
            pos_hint: {"right": 0.930, 'top': 0.481}

        Button:
            text: 'Go Back'
            size_hint: 0.2, 0.15
            height: "40dp"
            pos_hint: {"right": 1, 'top':0.2}
            on_press: root.go_back()
