<StandardScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Upper Panel (Header) with grey line
        BoxLayout:
            size_hint_y: None
            padding: [0, 0, 0, 10]
            height: 60  # Height for the upper panel
            canvas.before:
                Color:
                    rgba: 0.498, 0.533, 0.553, 1  # Background color for the upper panel
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    points: [self.x, self.y, self.right, self.y]  # Line at the bottom of the panel
                    width: 6

            Label:
                text: "CURRENT TEMP: "
                font_size: 35
                height:35
                size_hint_y: None
                size: self.texture_size
                halign: 'center'  # Center the text horizontally
                valign: 'middle'  # Center the text vertically

        FloatLayout:
            canvas.before:
                Color:
                    rgba: 0.498, 0.533, 0.553, 1  # Same background color as the upper panel
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.temp_text + " Â°C"
                font_size: 27
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'top': 0.85, 'center_x': 0.45}
            Label:
                text: "TARGET TEMP"
                font_size: 27
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'top': 0.75, 'center_x': 0.4}
            RoundedSmallButton:
                pos_hint: {'center_x': 0.2, 'top': 0.85}
                on_press: root.start_decrease_temp()
                on_release: root.stop_decrease_temp()
            Image:
                source: "logos/left.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.197, 'top': 0.82}

            RoundedSmallButton:
                pos_hint: {'center_x': 0.8, 'top': 0.85}
                on_press: root.start_increase_temp()
                on_release: root.stop_increase_temp()
            Image:
                source: "logos/right.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.803, 'top': 0.82}

            Label:
                text: root.timer_text
                font_size: 27
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'top': 0.6, 'center_x': 0.45}
            Label:
                text: "TIMER"
                font_size: 27
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'top': 0.5, 'center_x': 0.4}
            RoundedSmallButton:
                pos_hint: {'center_x': 0.2, 'top': 0.6}
                on_press: root.start_decrease_timer()
                on_release: root.stop_decrease_timer()
            Image:
                source: "logos/left.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.197, 'top': 0.57}

            RoundedSmallButton:
                pos_hint: {'center_x': 0.8, 'top': 0.6}
                on_press: root.start_increase_timer()
                on_release: root.stop_increase_timer()
            Image:
                source: "logos/right.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.803, 'top': 0.57}

            RoundedSmallButton:
                pos_hint: {'center_x': 0.2, 'top': 0.3}
                on_press: root.go_back()
            Image:
                source: "logos/turn-back.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.2, 'top': 0.27}

            RoundedSmallButton:
                pos_hint: {'center_x': 0.5, 'top': 0.3}
                on_press: root.pump_mode()
            Image:
                source: "logos/pump.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.5, 'top': 0.27}
            RoundedSmallButton:
                pos_hint: {'center_x': 0.7, 'top': 0.3}
                on_press: root.run()
            Image:
                source: "logos/run.png"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': 0.7, 'top': 0.27}