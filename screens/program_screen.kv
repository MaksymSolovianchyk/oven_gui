<ProgramScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.498, 0.533, 0.553, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Top menu buttons
        RoundedSmallButton:
            pos_hint: {'center_x': 0.3, 'top': 0.95}
            on_press: root.go_back()
        Image:
            source: "logos/turn-back.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.3, 'top': 0.925}

        Label:
            text: "Add"
            font_size: 16
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.99, 'center_x': 0.6}
        RoundedSmallButton:
            pos_hint: {'center_x': 0.6, 'top': 0.95}
            on_press: root.go_back()
        Image:
            source: "logos/add.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.6, 'top': 0.92}

        Label:
            text: "Reorder"
            font_size: 16
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.99, 'center_x': 0.75}
        RoundedSmallButton:
            pos_hint: {'center_x': 0.75, 'top': 0.95}
            on_press: root.reorder()
        Image:
            source: "logos/reorder-option.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.75, 'top': 0.92}

        # Scrollable area
        ScrollView:
            size_hint: 1, None
            height: root.height * 0.7
            pos_hint: {'x': 0.02, 'y': 0.05}
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 880
                RelativeLayout:
                    size_hint_y: None
                    height: 300

                    BigButton:
                        on_press: print("Button 1 pressed")
                        pos_hint: {'center_x': 0.5}

                    Image:
                        source: 'images/icon1.png'
                        size_hint: None, None
                        size: 100, 100
                        pos_hint: {'center_x': 0.2, 'center_y': 0.5}

                    Label:
                        text: "Low Temp Mode"
                        font_size: 24
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                    Label:
                        text: "Temperature: " + root.low_mode_temp_text + "°C"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.53, 'center_y': 0.5}
                    Label:
                        text: "Time: " + root.low_mode_time_text + " min"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}

                RelativeLayout:
                    size_hint_y: None
                    height: 300

                    BigButton:
                        on_press: print("Button 2 pressed")
                        pos_hint: {'center_x': 0.5}

                    Image:
                        source: 'images/icon2.png'
                        size_hint: None, None
                        size: 100, 100
                        pos_hint: {'center_x': 0.2, 'center_y': 0.5}

                    Label:
                        text: "Mid Temp Mode"
                        font_size: 24
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                    Label:
                        text: "Temperature: " + root.default_mode_temp_text + "°C"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.53, 'center_y': 0.5}
                    Label:
                        text: "Time: " + root.default_mode_time_text + " min"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}

                RelativeLayout:
                    size_hint_y: None
                    height: 300

                    BigButton:
                        on_press: print("Button 3 pressed")
                        pos_hint: {'center_x': 0.5}

                    Image:
                        source: 'images/icon3.png'
                        size_hint: None, None
                        size: 100, 100
                        pos_hint: {'center_x': 0.2, 'center_y': 0.5}

                    Label:
                        text: "High Temp Mode"
                        font_size: 24
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                    Label:
                        text: "Temperature: " + root.high_mode_temp_text + "°C"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.53, 'center_y': 0.5}
                    Label:
                        text: "Time: " + root.high_mode_time_text + " min"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}