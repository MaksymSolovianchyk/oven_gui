<ProgramScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.498, 0.533, 0.553, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Top menu buttons
        RoundedSmallButton:
            pos_hint: {'center_x': 0.2, 'top': 0.95}
            on_press: root.go_back()
        Image:
            source: "logos/turn-back.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.2, 'top': 0.925}
        Label:
            text: "Reorder"
            font_size: 16
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.99, 'center_x': 0.75}
        RoundedSmallButton:
            pos_hint: {'center_x': 0.75, 'top': 0.95}
        Image:
            source: "logos/reorder-option.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.75, 'top': 0.92}

        # Scrollable area
        ScrollView:
            size_hint: 1, None
            height: root.height * 0.7
            pos_hint: {'x': 0.02, 'y': 0.05}
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: program_screen_container
                orientation: 'vertical'
                size_hint_y: None
                height: 880
                RelativeLayout:
                    size_hint_y: None
                    height: 300

                    BigButton:
                        on_press: print("Button 1 pressed")
                        pos_hint: {'center_x': 0.5}

                    Image:
                        source: 'logos/up_ladder.png'
                        size_hint: None, None
                        size: 200, 200
                        pos_hint: {'center_x': 0.27, 'center_y': 0.43}

                    Label:
                        text: "Up Ladder Mode"
                        font_size: 24
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.52, 'center_y': 0.65}
                    Label:
                        text: " Max Temperature: " + root.upladder_mode_temp_text + "°C"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.555, 'center_y': 0.5}
                    Label:
                        text: "Time: " + root.upladder_mode_time_text + " min"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}

                RelativeLayout:
                    size_hint_y: None
                    height: 300

                    BigButton:
                        on_press: print("Button 2 pressed")
                        pos_hint: {'center_x': 0.5}

                    Image:
                        source: 'logos/donw_ladder.png'
                        size_hint: None, None
                        size: 200, 200
                        pos_hint: {'center_x': 0.27, 'center_y': 0.43}

                    Label:
                        text: "Down Ladder Mode"
                        font_size: 24
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.54, 'center_y': 0.65}
                    Label:
                        text: "Max Temperature: " + root.downladder_mode_temp_text + "°C"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.555, 'center_y': 0.5}
                    Label:
                        text: "Time: " + root.downladder_mode_time_text + " min"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}

                RelativeLayout:
                    size_hint_y: None
                    height: 300

                    BigButton:
                        on_press: print("Button 3 pressed")
                        pos_hint: {'center_x': 0.5}

                    Image:
                        source: 'logos/heating_mode.png'
                        size_hint: None, None
                        size: 200, 200
                        pos_hint: {'center_x': 0.27, 'center_y': 0.43}
                    Label:
                        text: "Heating Mode"
                        font_size: 24
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                    Label:
                        text: "Max Temperature: " + root.heating_mode_temp_text + "°C"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.555, 'center_y': 0.5}
                    Label:
                        text: "Time: " + root.heating_mode_time_text + " min"
                        font_size: 20
                        color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.texture_size
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}