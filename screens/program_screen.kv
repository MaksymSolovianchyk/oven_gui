<ProgramScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.498, 0.533, 0.553, 1
            Rectangle:
                pos: self.pos
                size: self.size

        RoundedSmallButton:
            pos_hint: {'center_x': 0.2, 'top': 0.95}
            on_press: root.go_back()
        Image:
            source: "logos/turn-back.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.2, 'top': 0.925}

        RoundedSmallButton:
            pos_hint: {'center_x': 0.75, 'top': 0.95}
            size:150,60
            text: "Load Presets"
            font_size:16
            on_press: root.load_presets_from_xlsx()

        BoxLayout:
            id: presets_container
            orientation: 'vertical'
            size_hint: 0.8, 0.70   # narrower and a bit lower
            pos_hint: {'center_x': 0.5, 'y': 0.05}
