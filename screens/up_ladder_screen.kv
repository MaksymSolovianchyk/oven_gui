<UpLadderScreen>:
    FloatLayout:

        canvas.before:
            Color:
                rgba: 0.498, 0.533, 0.553, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Top menu buttons
        RoundedSmallButton:
            size:80,80
            pos_hint:{'right':0.95, 'top':0.95}
            on_press:root.graph_lookup()

        Image:
            source: "logos/graph_lu.png"
            size_hint: None, None
            size: 65, 65
            pos_hint: {'right': 0.945, 'top': 0.93}

        Label:
            text: "Go Back"
            font_size: 16
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.3, 'center_x': 0.65}
        RoundedSmallButton:
            pos_hint: {'center_x': 0.65, 'top': 0.25}
            on_press: root.go_back()
        Image:
            source: "logos/turn-back.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.65, 'top': 0.225}

        Label:
            text: "Edit"
            font_size: 16
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.3, 'center_x': 0.78}
        RoundedSmallButton:
            pos_hint: {'center_x': 0.78, 'top': 0.25}
            on_press: root.open_panel()
        Image:
            source: "logos/edit-button.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.78, 'top': 0.225}

        Label:
            text: "Start"
            font_size: 16
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.3, 'center_x': 0.91}
        RoundedSmallButton:
            pos_hint: {'center_x': 0.91, 'top': 0.25}
            on_press: root.run()
        Image:
            source: "logos/play.png"
            size_hint: None, None
            size: 50, 50
            pos_hint: {'center_x': 0.91, 'top': 0.225}

        Label:
            text: "Name: " + root.preset_name
            font_size: 24
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.7, 'center_x': 0.7}
            width:200
            text_size:self.width, None


        Label:
            text: "Description: " + root.preset_description
            font_size: 20
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.55, 'center_x': 0.7}



        Image:

            source: root.graph_source  # This will now point to the correct graph image
            size_hint: None, None
            size: 400, 300
            pos_hint: {'center_x': 0.3, 'top': 0.9}


        # Sliding Panel
        BoxLayout:
            id: sliding_panel
            orientation: 'vertical'
            size_hint: None, 1
            width: root.width * 0.6
            pos: (-self.width, 0)
            padding:[0,20,0,0]
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.15, 0.95
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Panel content: ScrollView
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 12
                scroll_type: ['bars', 'content']

                GridLayout:
                    id: panel_content
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 10
                    spacing: 30

