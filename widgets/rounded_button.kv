<RoundedButton@Button>:
    font_size: 30
    size_hint: None, None
    size: 300, 80
    color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: 1,1,1,1  # White color for border (adjust as needed)
        RoundedRectangle:
            pos: self.x - 2, self.y - 2
            size: self.width + 4, self.height + 4
            radius: [30]  # Rounded corners for the button
        Color:
            rgba: 0.3, 0.3, 0.3, 1  # Dark grey color (adjust as needed)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30]  # Rounded corners for the button fill

<RoundedSmallButton@Button>:
    font_size: 30
    size_hint: None, None
    size: 80, 80
    color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: 1,1,1,1  # White color for border (adjust as needed)
        RoundedRectangle:
            pos: self.x - 2, self.y - 2
            size: self.width + 4, self.height + 4
            radius: [15]  # Smaller radius for small button
        Color:
            rgba: 0.3, 0.3, 0.3, 1  # Dark grey color (adjust as needed)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]  # Smaller radius for button fill